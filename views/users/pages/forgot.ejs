<%- include('../header'); -%>
<div class="content">
    <div class="container">
      <div class="block">
          <h2 class="block-title"><strong style="text-transform: none; font-weight: 100;">FAITH</strong><span> TV</span></h2>
          <div class="mytbn login register">
              <div class="container">
                  <div class="row">
                      <div class="col-md-8 col-md-offset-2">
                          <div class="item">
                              <h4 style="text-align:center">FORGOT PASSWORD</h4>
                              <div class="row">
                                <div style = "text-align:center; color:red;" id="alertBox" role="alert"></div>
                                  <div class="col-sm-12">
                                      <div class="tbl form">
                                          <div class="tbl-cell" id="rgstrForm">
                                              <form id = "forgot-form">
                                                  <div class="form-group">
                                                      <label for="email" class="sr-only">Email</label>
                                                      <div class="input-group">
                                                          <span class="input-group-addon">
                                                              <em class="fa fa-fw fa-envelope"></em>
                                                          </span>
                                                          <input value="" id="email" name="email" type="email" class="form-control" placeholder="Enter email">                                                        
                                                        </div>
                                                  </div>                              
                                                  <div class="form-group">
                                                      <button style = "width:190px" class="btn btn-primary">Request password</button>
                                                 </div> 
                                            </form>
                                            </div> <!-- /.tbl-cell -->
                                      </div> <!-- /.tbl -->
                                  </div> <!-- /.col -->
                                </div>
                                    <div class="row">
                                  <div style = "margin-left:20%;" class = "col-lg-12">
                                </div>
                              </div> <!-- /.row -->
                              <p class="item-footer">Not registered? <a href="/register">Sign up</a></p>
                          </div> <!-- /.item -->
                      </div> <!-- /.col -->
                  </div> <!-- /.row -->
              </div> <!-- /.container -->
          </div> <!-- /.mytbn -->
      </div> <!-- /.block -->
  </div> <!-- /.container -->
</div> <!-- /.content -->
<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
    $('#forgot-form').validate({
    rules: {
        email: {
        required: true,
        email: true,
      },
    },
    messages: {
        email: 'Please provide a valid email',
    },
    errorPlacement: function(error, element) {
        error.appendTo(element.parent("div").parent("div") );
    },
    submitHandler: () => {
   
     $.ajax({
         url: '/forgot',
         type: 'post',
         dataType: 'json',
         data: {
            'email': $("#email").val(),
         },
         success: function(data) {
            var url = "/";    
            $(location).attr('href',url);
         },
         error: function(data) {
            $("#alertBox").show();
            $("#alertBox").text(data.responseJSON.message);
         },
        });
       }
    });
    $(document).on('submit', '#forgot-form', (event) => {
    $(document).ready(function (){
    event.preventDefault();
  
    
  });
  });
</script>
<%- include('../../end'); -%>