<%- include('../header'); -%>
<div class="content">
    <div class="container">
    
      <div class="block">
          <div class="contact-page" id="prayerForm">
              <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="block">
                    <div class="live-audience clearfix">
                        <h2 class="block-title"><span>ADVERTISE ON FAITH</span> TO FAITH TV
                        </h2>
                        <p class = "pt-3">
                          Complete our online application form to place your TV ad or commercial on FAITH TO FAITH TV, and become a part of the FAITH TO FAITH TV, 
                          where viewers experience the message of faith and inspiring television like never </p>
                        <hr />
                      <p>&nbsp;</p>

                          <h4 class = "pb-2">CONTACT DETAILS</h4>
                          <div id = "message"></div>
                          <form class = "advert-form">
                          <div class = "form-group">
                              <label for="fullname">*Your Full Name</label>
                              <input placeholder = "Your Name (Required)" type="text" id = "fullname" name = "fullname" class = "form-control">
                          </div>
                          <div class = "form-group">
                              <label for="email">* Email Address</label>
                              <input type="text" id = "email"placeholder ="Email Address (Required)" name = "email" class = "form-control">
                          </div>
                          <div class = "form-group">
                              <label for="phone">Phone Number</label>
                              <input type="text" placeholder ="Phone Number" name = "phone" class = "form-control" id = "phone">
                          </div>
                          <div class = "form-group">
                            <label for="location">Location</label>
                            <input type="text" placeholder ="Location" id = "location" name = "location" class = "form-control" >
                        </div>
                        <div class = "form-group">
                          <label for="ministry">Ministry Name</label>
                          <input type="text" placeholder ="Ministry" id = "ministry" name = "ministry" class = "form-control">
                      </div>
                      <div class = "form-group">
                          <label for="web">Website URL or Facebook Page</label>
                          <input type="text" placeholder ="Website URL" id = "web" name = "web" class = "form-control">
                      </div>
                      <div class = "form-group">
                          <label for="url">Programme or Ministry Website</label>
                          <input type="text" placeholder ="Website URL" id = "url" name = "url" class = "form-control">
                      </div>
                          <br>
                          <h4 style = "font-weight: bold;" class = "pb-2 pt-5">ADVERTISING DETAILS</h4>
                          <div class = "form-group">
                              <label for="advert_title">* Ad/Event Title</label>
                              <input placeholder = "Advert Title (Required)" type="text" id = "advert_title" name = "advert_title" class = "form-control">
                              </div>

                           <div class = "form-group">
                              <label for="describe">*Describe Your Ad/Event</label>
                              <textarea placeholder = "Enter your Ad/Event Description (Required)" id = "describe" name="describe" id="describe" rows="5" class="form-control"></textarea>
                           </div>
                           <div class = "form-group">
                              <label for="video">Video URL</label>
                              <input placeholder = "YouTube / Vimeo URL" type="text" id ="video" name = "video" class = "form-control">
                              <span class = "video-text">If available, please enter a YouTube or Vimeo video link of your ad/event above..</span>
                           </div>
                           <div class = "form-group">
                              <label for="download">* Media Download Link</label>
                              <input placeholder = "Media Download Link URL (Required)" type="text" id = "download" name = "download" class = "form-control">
                              <span class = "video-text">Please supply a download link of your ad/event assets.</span>
                           </div>
                           <br>
                           <h4 style = "font-weight: bold;" class = "pb-2 pt-4">INVOICING DETAILS</h4>
                           <div class = "form-group">
                              <label for="invoice_made">* Invoice Made Out To</label>
                              <input placeholder = "Company/Entity Name to be Invoiced (Required)" type="text" id ="invoice_made" name = "invoice_made" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="invoice_address">* Invoice Address</label>
                              <input placeholder = "Address (Required)" type="text" id = "invoice_address" name = "invoice_address" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="contact_no">* Contact Number</label>
                              <input placeholder = "Contact Number (Required)" id ="contact_no" type="text" name = "contact_no" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="vat">VAT Number (If Applicable)</label>
                              <input placeholder = "VAT Registration Number" id = "vat" type="text" name = "vat" class = "form-control">
                           </div>
                          <hr class = "my-4">
                          <div class = "form-group">
                              <label class="chkBox">
                                  <span>
                                      <input type="checkbox" value = "Y" name = "terms1" class = "inputCheckbox">
                                      <strong>By using this service i agree to FAITH TO FAITH TV's  <a href = "">Terms of Service</a> and privacy policy</strong>
                                  </span>
                              </label>
                          </div>
                        <hr />
                        <div>
                          <div class = "form-group">
                              <label class="chkBox">
                                  <span>
                                      <input type="checkbox" value = "Y" name = "terms2" class = "inputCheckbox">
                                      <span><strong>By using this online service I agree to FAITH TO FAITH TV's Terms of Service and Privacy Policy.
                                          I consent to the processing of my personal data by FAITH TO FAITH TV with its registered office in Port Harcourt, Rivers State, Nigeria, in order to provide services available on the site faithtofaithtv.org. I am informed about the 
                                          right to the contents of my personal data and can make corrections to it when needed. </span>
                                  </span>
                              </label>
                          </div>
                            <p><small><i>* Required fields</i></small></p>
                        </div>
                        <div style="text-align: right; margin-top: 10px;">
                          <button class="g-recaptcha btn btn-primary submit"><em class="fa fa-send"></em> Submit</button>
                        </div>
                        
                        <div class="clearfix"></div>
                      </form>
                   </div>
                    <style>
                      #prayerForm hr {
                          height: 1px;
                          background: #E1E1E1;
                          margin: 20px 0;
                      }
                      .chkBox {
                          display: block;
                          font-weight: normal;
                          margin-bottom: 0;
                          padding: 5px;
                          background: #F1F1F1;
                          border-radius: 4px;
                          border: 1px solid #E1E1E1;
                          cursor: pointer;
                      }
                      .chkBox.has-error {
                          background: #da4453;
                          border: #da4453;
                          color: #FFF;
                      }
                      .chkBox > input {
                          float: left;
                          margin-right: 10px;
                      }
                      .chkBox > small {
                          display: block;
                          padding: 7px 0 0 23px;
                      }
              
              </style>
                </div> 
              </div>
              <%- include('../faith'); -%>  
            </div> <!-- /.row -->
          </div> <!-- /.contact -->
        </div> <!-- /.block -->
      <hr>
      <div class="sharethis-inline-share-buttons"></div>
    </div> <!-- /.block -->
    </div>
<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>

        $('.advert-form').validate({
        rules: {
            fullname: 'required',
            advert_title: 'required',
            describe: 'required',
            invoice_made: 'required',
            invoice_address: 'required',
            contact_no: 'required',
            email: {
            required: true,
            email: true,
            },
            download: {
                required: true,
                url: true
            },
            'terms1': {
                required: true,
                
            },
            'terms2': {
                required: true,
                
            }
        },
        messages: {
            fullname: 'Please provide your full names',
            email: 'Please provide a valid email',
            advert_title: 'An advert title is required',
            describe: 'Provide description for advert',
            download: 'This field is required. (And must be valid URL)',
            invoice_made: 'This field is required',
            invoice_address: 'This field is required',
            contact_no: 'This field is required',
            'terms1': {
                required: "Please accept this condition",
            },
            'terms2':{
                required: "Please accept this condition",
            }
        },
        submitHandler: () => {
            const data = {
            "fullName": $("#fullname").val(),
            "email":  $("#email").val(),
            "phoneNumber": $("#phone").val(),
            "ministryName": $("#ministry").val(),
            "location": $("#location").val(),
            "webURL": $("#url").val(),
            "title": $("#advert_title").val(),
            "description": $("#describe").val(),
            "videoURL": $("#video").val(),
            "mediaDownloadLink": $("#download").val(),
            "invoiceMade": $("#invoice_made").val(),
            "invoiceAddress": $("#invoice_address").val(),
            "contactNumber": $("#contact_no").val(),
            "VATnumber": $("#vat").val()
         }
         axios({
            method: 'post',
            url: '/create_advert',
            data
        }) .then( response => {
            // handle success
            console.log(response);
                    if(response.data.status==200){
                        $('#message').html(`
                        <div style ="color:white" class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <strong>${response.data.message}</strong>
                        </div>`);
                        $('#advert-form')[0].reset();
                        window.scrollTo({
                            top: 0,
                            left: 0,
                            behavior: 'smooth'
                        });
                        $('#advert-form')[0].reset();
                    }else{
                        $('#message').html(`
                        <div style ="color:white" class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <strong>${response.data.message}</strong>
                        </div>`)
                        window.scrollTo({
                            top: 0,
                            left: 0,
                            behavior: 'smooth'
                        });
                    }
                })
                .catch(error => {
                    // handle error
                    console.log(error);
                })

           }
        });
        $(document).on('submit', '.advert-form', (event) => {
        $(document).ready(function (){
        event.preventDefault();

    });
});

  </script>
<%- include('../../end'); -%>