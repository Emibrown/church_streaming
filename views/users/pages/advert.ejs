<%- include('../header'); -%>

<div class="content">
    <div class="container">
    
      <div class="block">
          <div class="contact-page" id="prayerForm">
              <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-8">
                <div class="block">
                    <div class="live-audience clearfix">
                        <h2 class="block-title"><span>ADVERTISE ON FAITH</span> TO FAITH TV
                        </h2>
                        <p class = "pt-3">
                          Complete our online application form to place your TV ad or commercial on FAITH TO FAITH TV, and become a part of the FAITH TO FAITH TV, 
                          where viewers experience the message of faith and inspiring television like never </p>
                        <hr />
                      <p>&nbsp;</p>

                          <h4 class = "pb-2">CONTACT DETAILS</h4>
                          <form accept-charset="UTF-8" action="" method="post" class="story-form" role="form">
                          <input type="hidden" value="story" id="formStory" name="form">                  
                          <div class = "form-group">
                              <label for="fullname">*Your Full Name</label>
                              <input placeholder = "Your Name (Required)" type="text" name = "fullname" class = "form-control">
                          </div>
                          <div class = "form-group">
                              <label for="email">* Email Address</label>
                              <input type="text" placeholder ="Email Address (Required)" name = "email" class = "form-control">
                          </div>
                          <div class = "form-group">
                              <label for="phone">Phone Number</label>
                              <input type="text" placeholder ="Phone Number" name = "phone" class = "form-control">
                          </div>
                          <div class = "form-group">
                            <label for="location">Location</label>
                            <input type="text" placeholder ="Location" name = "location" class = "form-control">
                        </div>
                        <div class = "form-group">
                          <label for="ministry">Ministry Name</label>
                          <input type="text" placeholder ="Ministry" name = "ministry" class = "form-control">
                      </div>
                      <div class = "form-group">
                          <label for="web">Website URL or Facebook Page</label>
                          <input type="text" placeholder ="Website URL" name = "web" class = "form-control">
                      </div>
                      <div class = "form-group">
                          <label for="url">Programme or Ministry Website</label>
                          <input type="text" placeholder ="Website URL" name = "url" class = "form-control">
                      </div>
                          <br>
                          <h4 style = "font-weight: bold;" class = "pb-2 pt-5">ADVERTISING DETAILS</h4>
                          <div class = "form-group">
                              <label for="advert_title">* Ad/Event Title</label>
                              <input placeholder = "Advert Title (Required)" type="text" name = "advert_title" class = "form-control">
                              </div>

                           <div class = "form-group">
                              <label for="describe">*Describe Your Ad/Event</label>
                              <input placeholder = "Enter your Ad/Event Description (Required)" type="text" name = "describe" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="video">Video URL</label>
                              <input placeholder = "YouTube / Vimeo URL" type="text" name = "video" class = "form-control">
                              <span class = "video-text">If available, please enter a YouTube or Vimeo video link of your ad/event above..</span>
                           </div>
                           <div class = "form-group">
                              <label for="download">* Media Download Link</label>
                              <input placeholder = "Media Download Link URL (Required)" type="text" name = "download" class = "form-control">
                              <span class = "video-text">Please supply a download link of your ad/event assets.</span>
                           </div>
                           <br>
                           <h4 style = "font-weight: bold;" class = "pb-2 pt-4">INVOICING DETAILS</h4>
                           <div class = "form-group">
                              <label for="invoice_made">* Invoice Made Out To</label>
                              <input placeholder = "Company/Entity Name to be Invoiced (Required)" type="text" name = "invoice_made" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="invoice_address">* Invoice Address</label>
                              <input placeholder = "Address (Required)" type="text" name = "invoice_address" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="contact_no">* Contact Number</label>
                              <input placeholder = "Contact Number (Required)" type="text" name = "contact_no" class = "form-control">
                           </div>
                           <div class = "form-group">
                              <label for="vat">VAT Number (If Applicable)</label>
                              <input placeholder = "VAT Registration Number" type="text" name = "vat" class = "form-control">
                           </div>
                          <hr class = "my-4">
                          <div class = "form-group">
                              <label class="chkBox">
                                  <span>
                                      <input type="checkbox" value = "Y" class = "" class = "inputCheckbox">
                                      <strong>By using this service i agree to FAITH TO FAITH TV's  <a href = "">Terms of Service</a> and privacy policy</strong>
                                  </span>
                              </label>
                          </div>
                        <hr />
                        <div>
                          <div class = "form-group">
                              <label class="chkBox">
                                  <span>
                                      <input type="checkbox" value = "Y" class = "inputCheckbox">
                                      <span><strong>By using this online service I agree to FAITH TO FAITH TV's Terms of Service and Privacy Policy.
                                          I consent to the processing of my personal data by FAITH TO FAITH TV with its registered office in Port Harcourt, Rivers State, Nigeria, in order to provide services available on the site faithtofaithtv.org. I am informed about the 
                                          right to the contents of my personal data and can make corrections to it when needed. </span>
                                  </span>
                              </label>
                          </div>
                            <p><small><i>* Required fields</i></small></p>
                        </div>
                        <div style="text-align: right; margin-top: 10px;">
                          <button class="g-recaptcha btn btn-primary"><em class="fa fa-send"></em> Submit</button>
                        </div>
                        
                        <div class="clearfix"></div>
                      </form>
                   </div>
                    <style>
                      #prayerForm hr {
                          height: 1px;
                          background: #E1E1E1;
                          margin: 20px 0;
                      }
                      .chkBox {
                          display: block;
                          font-weight: normal;
                          margin-bottom: 0;
                          padding: 5px;
                          background: #F1F1F1;
                          border-radius: 4px;
                          border: 1px solid #E1E1E1;
                          cursor: pointer;
                      }
                      .chkBox.has-error {
                          background: #da4453;
                          border: #da4453;
                          color: #FFF;
                      }
                      .chkBox > input {
                          float: left;
                          margin-right: 10px;
                      }
                      .chkBox > small {
                          display: block;
                          padding: 7px 0 0 23px;
                      }
              
              </style>
                </div> 
              </div>
              <%- include('../faith'); -%>  
            </div> <!-- /.row -->
          </div> <!-- /.contact -->
        </div> <!-- /.block -->
      <hr>
      <div class="sharethis-inline-share-buttons"></div>
    </div> <!-- /.block -->
    </div>
<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
    $(document).on('submit', '#prayer-form', function(event) {
        event.preventDefault();
          let contactForm = $(this);
          let fullname = jQuery("#fullname").val();
          let email = jQuery("#email").val();
          let phone = jQuery("#phone").val();
          let location = jQuery("#email").val();
          let ministry = jQuery("#minitsry").val();
          let url = jQuery("#url").val();
          let web = jQuery("#web").val();
          let advert_title = jQuery("#advert_title").val();
          let describe = jQuery("#describe").val();
          let video = jQuery("#video").val();
          let download = jQuery("#download").val();
          let invoice_made = jQuery("#invoice_made").val();
          let invoice_address = jQuery("#invoice_address").val();
          let contact_no = jQuery("#contact_no").val();
          let vat = jQuery("#vat").val();
          if (!terms1.checked==true && !terms2.checked==true){
            $('#message').html(`
                <div style ="color:white" class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Attention</strong> Please accept all terms and conditions.
                </div>`);
  
                window.scrollTo({
                top: 0,
                left: 0,
                behavior: 'smooth'
            });
          }else{
  
        jQuery.ajax({
            url: '/advert',
            method: "POST",
            dataType : "json",
            data: JSON.stringify({
            "fullName": fullname,
            "email": email,
            "phoneNumber": phone,
            "location": location,
            "ministryName" : ministry,
            "webURL": web,
            "title": advert_title,
            "description": describe,
            "videoURL": video,
            "mediaDownloadLink": download,
            "recipientName": invoice_made,
            "recipientAddress": invoice_address,
            "recipientContact": contact_no,
            "VATnumber": vat
        }),
            "contentType": "application/json",
            success: function(response) { 
                console.log(response);
                if(response.status==200){
                    $('#message').html(`
                    <div style ="color:white" class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Success</strong> Your prayer request has been sent successfully.
                    </div>`);
                }
            },
            error:function(jqXhr){
                if(jqXhr.status ==400){
                    let responseText = jQuery.parseJSON(jqXhr.responseText);
                     console.log(responseText);
                }
            }
        });
       }
    });
  
  
  </script>
