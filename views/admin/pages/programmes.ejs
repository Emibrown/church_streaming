<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                 programmes
               </div>
           </div> 
           <div class="page-title-actions">
            <div class="d-inline-block dropdown">
                <a type="button" href="/admin/add_programme" class="btn-shadow 
                 btn btn-info">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-business-time fa-w-20"></i>
                    </span>
                    Add programme
                </a>
            </div>
        </div>   
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th class="text-center">Title</th>
                                <th class="text-center">Type</th>
                                <th class="text-center">Category</th>
                                <th class="text-center">Date</th>
                                <th class="text-center">Options</th>
                                <th  class="text-center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% programmes.forEach(function (item,index){ %>
                                <tr>
                                    <td class="text-left">
                                        <img width="40" class=" thumbnail" src="/large_images/<%= item.image %>" alt="">
                                    </td>
                                    <td class="text-center"><%= item.title%></td>
                                    <td class="text-center"><%= item.type %></td>
                                    <td class="text-center">
                                        <% item.categories.map((cat)=>{ %>
                                        <%= cat.title %> <br>
                                        <% }) %>
                                    </td>
                                    <td class="text-center"><%= moment(item.date).format('LL') %></td>
                                    <td class="text-center">
                                        <a href= "/admin/programme/<%=item._id%>" type="button" id="PopoverCustomT-1"
                                            class="btn btn-primary btn-sm">View</a>
                                    </td>
                                    <td class="text-center">
                                        <a href= "/admin/delete_programme/<%=item._id%>" type="button" id="PopoverCustomT-1"
                                            class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->

<%- include('../footer'); -%>
<%- include('../js'); -%>
<%- include('../../end'); -%>