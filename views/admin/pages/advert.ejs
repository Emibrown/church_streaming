<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                  Advert
               </div>
           </div> 
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <tr>
                                <th class="">Title</th>
                                <td class=""><%= advert.title %></td>
                            </tr>
                            <tr>
                                <th class="">Full name</th>
                                <td class=""><%= advert.fullName %></td>
                            </tr>
                            <tr>
                                <th class="">Ministry name</th>
                                <td class=""><%= advert.ministryName %></td>
                            </tr> 
                            <tr>
                                <th class="">Phone no</th>
                                <td class=""><%= advert.phoneNumber %></td>
                            </tr>
                            <tr>
                                <th class="">Date added</th> 
                                <td class=""><%= moment(advert.date).format('LL') %></td>
                            </tr>
                            <tr>
                                <th class="">Email</th>
                                <td class=""><%= advert.email %></td>
                            </tr>
                            <tr>
                                <th class="">Description</th>
                                <td class=""><%= advert.description %></td>
                            </tr>
                            <tr>
                                <th class="">Website Url/ facebook page</th>
                                <td class=""><%= advert.webURL %></td>
                            </tr>
                            <tr>
                                <th class="">Location</th>
                                <td class=""><%= advert.location %></td>
                            </tr>
                            <tr>
                                <th class="">video Url</th>
                                <td class=""><%= advert.videoURL %></td>
                            </tr>
                            <tr>
                                <th class="">Media Download Link</th>
                                <td class=""><%= advert.mediaDownloadLink %></td>
                            </tr>
                            <tr>
                                <th class="">Invoice made to</th>
                                <td class=""><%= advert.invoiceMade %></td>
                            </tr>
                            <tr>
                                <th class="">Invoice address</th>
                                <td class=""><%= advert.invoiceAddress %></td>
                            </tr>
                            <tr>
                                <th class="">contact number</th>
                                <td class=""><%= advert.contactNumber %></td>
                            </tr>
                            <tr>
                                <th class="">VAT</th>
                                <td class=""><%= advert.VATnumber %></td>
                            </tr>
                     
                    </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<%- include('../../end'); -%>