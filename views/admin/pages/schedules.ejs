<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                 Schedules
               </div>
           </div> 
           <div class="page-title-actions">
            <div class="d-inline-block dropdown">
                <a type="button" href="/admin/api/add_schedule" class="btn-shadow 
                    btn btn-info">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-business-time fa-w-20"></i>
                    </span>
                    Add schedule
                </a>
            </div>
            </div>   
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Show</th>
                                <th>Video</th>
                                <th  class="">Start time</th>
                                <th  class="">End time</th>
                                <th  class="">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% schedules.forEach(function (item,index){ %>
                                <tr>
                                    <td class=""><%= item.show.title %></td>
                                    <% if(item.video){%> 
                                    <td class=""><a href="/admin/video/<%= item.video._id  %>"><%= item.video.title %></a></td>
                                    <% }else{%> 
                                    <td class=""><a href="#">No video</a></td>
                                    <%} %> 
                                    <td class=""><%= moment(item.startTime).format('LLL') %></td>
                                    <td class=""><%= moment(item.endTime).format('LLL')  %></td>

                                    <td class="">
                                        <button id = "<%=item._id%>"
                                            class="btn btn-danger btn-sm">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
    $(document).on('click', '.btn-danger', function(e) {
        e.preventDefault();
        const id = $(this).attr('id');
        swal({
            title: 'Are you sure?',
            text: "This schedule will be DELETED!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed & Delete!'
        }).then((result) => {
            if (result) {
                $.ajax({
                    url: '/admin/api/delete_schedule/'+id,
                    method: "DELETE",
                    dataType : "json",
                    "contentType": "application/json",
                    success: function(data) {
                        window.location.reload();
                        if (data.status == 200) {
                            $('#success_message').html(data.message);
                        }
                    },
                    error: function(jqXhr) {
                        if (jqXhr.status == 400) {
                           
                        }
                    }
                });
                swal(
                    'Deleted!',
                    'Schedule Deleted.',
                    'success'
                )
    
            }
        })
    });
</script>
<%- include('../../end'); -%>