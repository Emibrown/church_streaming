<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
    <!-- title  -->
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                  All System's Admins
               </div>
           </div>
           <div class="page-title-actions">
            <div class="d-inline-block dropdown">
               <a type="button" href="/admin/api/create-admin" class="btn-shadow 
                btn btn-primary">
                   <span class="btn-icon-wrapper pr-2 opacity-7">
                   </span>
                   Create New Admin
               </a>
           </div>
        </div> 
     </div>
   </div>       
   <!-- title -->
    <!--body  -->
    <div class="main-card mb-3 card">
        <div class="card-body ">
            <table style="width: 100%;" id="example2" class="table  table-striped table-bordered">
                <thead>
                <tr>
                    <th>S/N</th>
                    <th>First Name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th class ="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                    <% if(admins.length > 0) { let sn=1; %>
                        <% admins.forEach(user => { %>               
                 <tr>
                    <td><%= sn %></th>
                    <td><%= user.firstname %> </td>
                    <td><%= user.lastname %></td>
                    <td><%= user.email %></td>
                    <td><%= user.address %></td>
                    <td><%= user.location %></td>
                    <td>
                        <% if (user.isBlocked){  %>
                         <span style = "background-color:red;color:white;padding:5px;">Inactive</span> 
                        <% } else{ %>  
                            <span style = "background-color:green;color:white; padding:5px">Active</span> 
                        <% } %>

                    </td>
                    <td class = "text-center">
                        <a class = "btn btn-primary btn-sm" href = "/admin/view-single-admin/<%=user._id %>" class="mb-2 mr-2 btn-hover-shine btn btn-shadow btn-success"> 
                            View record</a>
                        <button id = "<%=user._id%>"
                            class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
             <% sn++ %>
            <% }) %>
            <% }else{ %>
                No Record available
            <% } %>
                </tfoot>
            </table>
        </div>
    </div>
  <!-- body ends -->
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
      $(document).ready(function() {
    $('#example2').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
    } );
} );

$(document).on('click', '.btn-danger', function(e) {
        e.preventDefault();
        const id = $(this).attr('id');
        swal({
            title: 'Are you sure?',
            text: "This Admin will be DELETED!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed & Delete!'
        }).then((result) => {
            if (result) {
                $.ajax({
                    url: '/admin/delete_admin/'+id,
                    method: "DELETE",
                    dataType : "json",
                    "contentType": "application/json",
                    success: function(data) {
                        window.location.reload();
                        if (data.status == 200) {
                            $('#success_message').html(data.message);
                        }
                    },
                    error: function(jqXhr) {
                        if (jqXhr.status == 400) {
                           
                        }
                    }
                });
                swal(
                    'Deleted!',
                    'Admin Deleted.',
                    'success'
                )
    
            }
        })
    });
    
</script>
<%- include('../../end'); -%>