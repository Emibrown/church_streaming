<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
    <!-- title  -->
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                  Site Details
               </div>
           </div>
         </div>
   </div>       
   <!-- title -->
    <!--body  -->
   <div class="tabs-animation">
       <!-- form -->
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <div id = "message"></div>
                        <form id="add_about">
                            <div class="form_gallery form-group">
                                <label id="gallery2" for="image">About Image</label><br>
                                <input rows="5" data-name="#gallery2" id="image" class="form_gallery-upload "
                                   type="file" accept=".png, .jpg, .jpeg">
                             </div>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type = "text" id="title" name="title" rows="5" class="form-control" placeholder="About title" value = "<%= about.title %>">                 
                            </div>
                            <div class="form-group">
                                <label for="desc">Description</label>
                                <textarea id="desc" name="desc" rows="5" class="form-control" placeholder="About description" ><%= about.description %></textarea>                 
                            </div>
                            <button class="mt-1 btn btn-primary" id = "btn">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
         <!-- form ends -->
  </div>
  <!-- body ends -->
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
    $(document).on('submit', '#add_about', event => {
        event.preventDefault();
        const file = document.querySelector('#image')
        const data = new FormData()
        data.append("description", $("#desc").val());
        data.append("title", $("#title").val());
        data.append("file", file.files[0]);
        const config = {
            onUploadProgress: function(progressEvent) {
            const percentCompleted = Math.round((progressEvent.loaded * 100) / progressEvent.total)
            console.log(percentCompleted)
            $('#btn').val(percentCompleted);
            }
        }

        axios.put('/admin/about/<%= about.id %>', data, config)
        .then(function (response) {
            // handle success
            console.log(response)
            const url = "/admin/about";    
            $(location).attr('href',url);
            displaymsg(response.data.message);
        })
        .catch(function (error) {
            // handle error
            console.log(error);
            displayerr(error.message)
        })
     })
</script>
<%- include('../../end'); -%>