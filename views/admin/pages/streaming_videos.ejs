<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                 Streaming Videos
               </div>
           </div> 
           <div class="page-title-actions">
            <div class="d-inline-block dropdown">
                <a type="button" href="/admin/add_streaming_videos" class="btn-shadow 
                 btn btn-info">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-business-time fa-w-20"></i>
                    </span>
                    Link a video
                </a>
            </div>
            </div>   
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                  <table class="data-tables table movie_table " style="width:100%">
                     <thead>
                        <tr>
                           <th class= "">Title</th>
                           <th class= "">Filename</th>
                           <th class= "">Linked date</th>
                           <th class= "">Duration</th>
                           <th class= "">Action</th>
                        </tr>
                     </thead>
                     <tbody>
                        <%videos.map((item)=>{%>
                        <tr>
                           <td class= ""><%= item.title %></td>  
                           <td class= ""><%= item.video %></td>              
                           <td class= ""><%= moment(item.date).format('LL') %></td>   
                           <td class= ""><%= item.duration %></td>
                           <td class= "">
                              <div class="col-12 form-group ">
                                 <a  href="/admin/delete_streaming_video/<%= item._id %> " class="btn btn-danger">Delete link</a>
                                 <a  href= "/admin/api/add_schedule/<%=item._id%>" class="btn btn-success">Schedule</a>
                              </div>
                           </td>                 
                        </tr>
                        <%})%>
                        
                     </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
