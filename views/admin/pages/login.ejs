<%- include('../header'); -%>

 <!-- Sign in Start -->
 <section class="sign-in-page">
    <div class="container">
      <div class="row justify-content-center align-items-center height-self-center">
         <div class="col-lg-5 col-md-12 align-self-center">
            <div class="sign-user_card ">                    
               <div class="sign-in-page-data">
                  <div class="sign-in-from w-100 m-auto">
                     <h3 class="mb-3 text-center">Sign in</h3>
                     <div id="alertBox" class="alert bg-white alert-secondary" role="alert">
                        <div class="iq-alert-icon">
                           <i class="ri-information-line"></i>
                        </div>
                        <div id="errMessage" class="iq-alert-text"></div>
                     </div>
                     <form id="loginForm" class="mt-4">
                        <div class="form-group">                                 
                           <input type="email" id="email" class="form-control mb-0" id="exampleInputEmail2" placeholder="Enter email" autocomplete="off" required>
                        </div>
                        <div class="form-group">                                 
                           <input type="password" id="password" class="form-control mb-0" id="exampleInputPassword2" placeholder="Password" required>
                        </div>                             
                     </form>
                     <div class="sign-info">
                        <button id="submitButton"  class="btn btn-primary">Sign in</button>
                     </div>       
                  </div>
               </div>
               <div class="mt-3">
                  <div class="d-flex justify-content-center links">
                     <a href="pages-recoverpw.html" class="f-link">Forgot your password?</a>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- Sign in END -->
      <!-- color-customizer -->
   </div>
</section>
  <!-- Sign in END -->
 
  <%- include('../js'); -%>
  <script>
    $("#alertBox").hide();
    $('#submitButton').click( function() {
      $("#alertBox").hide();     
      $.ajax({
         url: '/admin/login',
         type: 'post',
         dataType: 'json',
         data: {
            'email': $("#email").val(),
            'password': $("#password").val(),
         },
         success: function(data) {
            var url = "/admin/dashboard";    
            $(location).attr('href',url);
         },
         error: function(data) {
            $("#alertBox").show();
            $("#errMessage").text(data.responseJSON.message);
         },
      });
    });

  </script>
  <%- include('../../end'); -%>