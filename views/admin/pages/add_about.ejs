<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
    <!-- title  -->
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                  Site Details
               </div>
           </div>
         </div>
   </div>       
   <!-- title -->
    <!--body  -->
   <div class="tabs-animation">
       <!-- form -->
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <div id = "message"></div>
                        <form id="add_about">
                            <div class="form_gallery form-group">
                                <label id="gallery2" for="image">About Image</label><br>
                                <input rows="5" data-name="#gallery2" id="image" class="form_gallery-upload "
                                   type="file" accept=".png, .jpg, .jpeg">
                             </div>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type = "text" id="title" name="title" rows="5" class="form-control" placeholder="About title">                 
                            </div>
                            <div class="form-group">
                                <label for="desc">Description</label>
                                <input type = "text" id="desc" name="desc" rows="5" class="form-control" placeholder="About description">                  
                            </div>
                            <button class="mt-1 btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
         <!-- form ends -->
  </div>
  <!-- body ends -->
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
    $(document).on('submit', '#add_about', event => {
        event.preventDefault();
        const file = document.querySelector('#image')
        const data = {
            "file": file.files[0],
            "description": $("#desc").val(),
            "title":  $("#title").val(),
         }
        console.log(data)
        jQuery.ajax({
        url: '/admin/about',
        method: "POST",
        dataType : "json",
        data: JSON.stringify(data),
        "contentType": "application/json",
        success: function(response) { 
            console.log(response);
            if(response.status==200){
            displaymsg(response.message, "alert-secondary")
            $('#add_about')[0].reset();
            }
          },
          error:function(jqXhr){
              if(jqXhr.status ==400){
                let txt = jQuery.parseJSON(jqXhr.responseText);
                console.log(txt)
                  displaymsg(txt)
              }
          }
      });
     })
</script>
<%- include('../../end'); -%>