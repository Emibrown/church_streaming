<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                  Adverts
               </div>
           </div> 
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th class="text-center">Full name</th>
                                <th class="text-center">ministry name</th>
                                <th class="text-center"> phone no</th>
                                <th class="text-center">Date added</th>
                                <th class="text-center">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% advert.forEach(function (advert,index){ %>
                                <tr>
                                    <td class="text-left"><%= advert.title %></td>
                                    <td class="text-center"><%= advert.fullName %></td>
                                    <td class="text-center"><%= advert.ministryName %></td>
                                    <td class="text-center"><%= advert.phoneNumber %></td>
                                    <td class="text-center"><%= moment(advert.date).format('LL') %></td><td class="text-center">
                                        <a href= "/admin/api/show_proposal/<%=advert._id%>" type="button" id="PopoverCustomT-1"
                                            class="btn btn-primary btn-sm">View</a>
                                    </td>
                                </tr>
                            <% }) %>      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
