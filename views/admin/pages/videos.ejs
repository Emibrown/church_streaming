<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                 Video list
               </div>
           </div> 
           <div class="page-title-actions">
            <div class="d-inline-block dropdown">
                <a type="button" href="/admin/add_video" class="btn-shadow 
                 btn btn-info">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-business-time fa-w-20"></i>
                    </span>
                    Add video
                </a>
            </div>
            </div>   
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                  <table class="data-tables table movie_table " style="width:100%">
                     <thead>
                        <tr>
                           <th >Cover image</th>
                           <th class= "">Title</th>
                           <th class= "">Type</th>
                           <th class= "">Programme</th>
                           <th class= "">Date added</th>
                           <th class= "">Duration</th>
                           <th class= "">Views</th>
                           <th class= "">Action</th>
                        </tr>
                     </thead>
                     <tbody>
                        <%videos.map((item)=>{%>
                        <tr>
                           <td>
                                 <div class="iq-movie">
                                    <a href="javascript:void(0);"><img
                                          src="/small_images/<%= item.image %>" width= "100"
                                          class="img-border-radius avatar-40 img-fluid" alt=""></a>
                                 </div>
                                 
                           </td>
                           <td class= ""><%= item.title %></td>
                           <%if(item.programme){%> 
                           <td class= ""><%= item.programme.type %></td>
                           <td class= ""><%= item.programme.title %></td>
                           <% }else{ %>  
                           <td class= "">null</td>
                           <td class= "">null</td> 
                           <% } %>                  
                           <td class= ""><%= moment(item.date).format('LL') %></td>   
                           <td class= ""><%= item.duration %></td>
                           <td class= ""><%= item.views %></td>    
                           <td class= "">
                              <div class="col-12 form-group ">
                                 <a href="/admin/video/<%= item._id %>" class="btn btn-primary " id = "btn">view</a>
                                 <button id = "<%= item._id %>" class="btn btn-danger">Delete</a>
                              </div>
                           </td>                 
                        </tr>
                        <%})%>
                        
                     </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
    $(document).on('click', '.btn-danger', function(e) {
        e.preventDefault();
        const id = $(this).attr('id');
        swal({
            title: 'Are you sure?',
            text: "This video will be DELETED!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed & Delete!'
        }).then((result) => {
            if (result) {
                $.ajax({
                    url: '/admin/delete_video/'+id,
                    method: "GET",
                    dataType : "json",
                    "contentType": "application/json",
                    success: function(data) {
                        window.location.reload();
                        if (data.status == 200) {
                            $('#success_message').html(data.message);
                        }
                    },
                    error: function(jqXhr) {
                        if (jqXhr.status == 400) {
                           
                        }
                    }
                });
                swal(
                    'Deleted!',
                    'Video Deleted.',
                    'success'
                )
    
            }
        })
    });
</script>
<%- include('../../end'); -%>