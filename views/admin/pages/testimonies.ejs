<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                 Testimonies 
               </div>
           </div> 
        </div>
   </div>        

            <div class="main-card mb-3 card">
                <div class="card-body">
                    <table style="width: 100%;" id="example2" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Full name</th>
                                <th>location</th>
                                <th>email</th>
                                <th>Phone no</th>
                                <th>Date added</th>
                                <th class = "text-center">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% if(testimonies.length > 0){ let sn=1;  %>
                            <% testimonies.forEach(function (testimonies,index){ %>
                                <tr>
                                    <td><%= sn %></th>
                                    <td><%= testimonies.fullName %></td>
                                    <td><%= testimonies.location %></td>
                                    <td><%= testimonies.email %></td>
                                    <td><%= testimonies.phoneNumber %></td>
                                    <td><%= moment(testimonies.date).format('LL') %></td>
                                    <td class="text-center">
                                        <a href= "/admin/api/view-testimony/<%=testimonies._id%>" type="button" id="PopoverCustomT-1"
                                            class="btn btn-primary btn-sm">View</a>
                                        <a href= "/admin/api/edit-testimony/<%=testimonies._id%>" type="button" id="PopoverCustomT-1"
                                            class="btn btn-warning btn-sm">Edit</a>
                                        <button id = "<%=testimonies._id%>"
                                            class="btn btn-danger btn-sm">Delete</button>
                                    </td>
                                </tr>
                                <% sn++ %>
                                <% }) %> 
                                <%  } %>                        
                             </tbody>
                    </table>
                </div>
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<script>
$(document).ready(function() {
    $('#example2').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    } );
} );
    $(document).on('click', '.btn-danger', function(e) {
        e.preventDefault();
        const id = $(this).attr('id');
        swal({
            title: 'Are you sure?',
            text: "This testimony will be DELETED!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed & Delete!'
        }).then((result) => {
            if (result) {
                $.ajax({
                    url: '/admin/delete_testimony/'+id,
                    method: "DELETE",
                    dataType : "json",
                    "contentType": "application/json",
                    success: function(data) {
                        window.location.reload();
                        if (data.status == 200) {
                            $('#success_message').html(data.message);
                        }
                    },
                    error: function(jqXhr) {
                        if (jqXhr.status == 400) {
                           
                        }
                    }
                });
                swal(
                    'Deleted!',
                    'Testimony Deleted.',
                    'success'
                )
    
            }
        })
    });
    
    </script>
<%- include('../../end'); -%>