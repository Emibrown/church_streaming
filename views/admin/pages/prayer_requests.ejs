<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                 Prayer requests 
               </div>
           </div> 
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Full name</th>
                                <th class="text-center">email</th>
                                <th class="text-center">Phone no</th>
                                <th class="text-center">Prayer request</th>
                                <th class="text-center">Date added</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% prayerRequest.forEach(function (prayerRequest,index){ %>
                                <tr>
                                    <td class="text-left"><%= prayerRequest.fullName %></td>
                                    <td class="text-center"><%= prayerRequest.email %></td>
                                    <td class="text-center"><%= prayerRequest.phone %></td>
                                    <td class="text-center"><%= prayerRequest.prayerRequest %></td>
                                    <td class="text-center"><%= moment(prayerRequest.date).format('LL') %></td>
                                </tr>
                            <% }) %>      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


