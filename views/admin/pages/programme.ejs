<%- include('../header'); -%>
<%- include('../sidebar'); -%>

<!-- Page Content  -->
<div class="app-main__inner">
   <div class="app-page-title">
       <div class="page-title-wrapper">
           <div class="page-title-heading">
               <div class="page-title-icon">
                   <i class="pe-7s-car icon-gradient bg-mean-fruit"></i>
               </div>
               <div>
                Programme - <%= programme.title %> 
               </div>
           </div> 
        </div>
   </div>        
   <div class="tabs-animation">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="table-responsive">
                    <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <tr>
                                <th class="">Image</th>
                                <td class="">
                                    <img width="400" class=" thumbnail" src="/large_images/<%= programme.image %>" alt="">
                                </td>
                            </tr>
                            <tr>
                                <th class="">Title</th>
                                <td class=""><%= programme.title %></td>
                            </tr>
                            <tr>
                                <th class="">Type</th>
                                <td class=""><%= programme.type %></td>
                            </tr> 
                            <tr>
                                <th class="">Categories</th>
                                <td class="">
                                    <% programme.categories.map((cat)=>{ %>
                                    <%= cat.title %> <br>
                                    <% }) %>                                
                                </td>
                            </tr>
                            <tr>
                                <th class="">Description</th>
                                <td class=""><%= programme.description %></td>
                            </tr>
                            <tr>
                                <th class="">Date added</th> 
                                <td class=""><%= moment(programme.date).format('LL') %></td>
                            </tr>
                            <tr>
                                <th class="">Options</th>
                                <td class="">
                                    <a href= "/admin/edit_programme/<%=programme._id%>" type="button" id="PopoverCustomT-1"
                                        class="btn btn-primary btn-sm">Edit</a>
                                    <a href= "/admin/delete_programme/<%=programme._id%>" type="button" id="PopoverCustomT-1"
                                        class="btn btn-danger btn-sm">Delete</a>
                                </td>                            
                            </tr>
                     
                    </table>
                </div>
            </div>
        </div>
    </div>
    
  </div>
</div>
<!-- Page Content END -->


<%- include('../footer'); -%>
<%- include('../js'); -%>
<%- include('../../end'); -%>